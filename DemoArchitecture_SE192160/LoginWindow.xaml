<Window x:Class="DemoArchitecture_SE192160.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DemoArchitecture_SE192160"
        mc:Ignorable="d"
        Title="LoginWindow"
        Height="400" Width="700"
        WindowStartupLocation="CenterScreen"
        FontFamily="Arial"
        Background="#FFBAE6FD">

    <Window.Resources>
        <Style TargetType="Label">
            <Setter Property="FontSize" Value="26" />
            <Setter Property="Foreground" Value="#FF1E3A8A" />
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Height" Value="34" />
            <Setter Property="Background" Value="#FFF0F9FF" />
        </Style>
        <Style TargetType="PasswordBox">
            <Setter Property="Height" Value="34" />
            <Setter Property="Background" Value="#FFF0F9FF" />
        </Style>
        <Style TargetType="Button">
            <Setter Property="Padding" Value="10" />
            <Setter Property="Background" Value="#FF06B6D4" />
            <Setter Property="Foreground" Value="#FFFFFFFF" />
        </Style>
    </Window.Resources>

    <StackPanel>
        <Label Content="Email" />
        <TextBox Text="admin@company.com" Name="txtEmail" />
        <Label Content="Password" />
        <PasswordBox Password="@1" Name="txtPassword" />
        <Button x:Name="btnLogin" IsDefault="True"
                Content="Login" Click="BtnLogin_Click" />
    </StackPanel>
</Window>